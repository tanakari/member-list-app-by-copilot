# EditorConfig is awesome: https://EditorConfig.org
# Google Java Format との統合設定

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Java files - Google Java Format 対応
[*.java]
indent_size = 2
# Google Java Format が 2スペースインデントを使用するため
# max_line_length は Google Java Format に任せる
continuation_indent_size = 4

# Markdown files
[*.md]
trim_trailing_whitespace = false

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# JavaScript/TypeScript files
[*.{js,jsx,ts,tsx}]
indent_size = 2

# Vue files
[*.vue]
indent_size = 2

# HTML files
[*.html]
indent_size = 2

# CSS/SCSS files
[*.{css,scss,less}]
indent_size = 2

# XML files (including pom.xml) - 2スペース統一
[*.xml]
indent_size = 2

# Properties files
[*.properties]
trim_trailing_whitespace = true

# Shell scripts
[*.{sh,bash}]
end_of_line = lf

# Windows batch files
[*.{bat,cmd}]
end_of_line = crlf

# Makefile
[Makefile]
indent_style = tab